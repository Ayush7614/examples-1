apiVersion: apps/v1
kind: Deployment
metadata:
  name: mosquito-helloworld
  namespace: {{ meta.namespace }}
  labels: 
    app.kubernetes.io/name: mosquito-helloworld
spec:
  replicas: 1
  selector:
    matchLabels: 
      app.kubernetes.io/name: mosquito-helloworld
  template:
    metadata:
      labels: 
        app.kubernetes.io/name: mosquito-helloworld
    spec:
      containers:
        - name: hello-operator
          image: openhorizon/mosquito.helloworld_amd64:1.0.0
          imagePullPolicy: Always
          ports:
            - name: http
              protocol: TCP
              containerPort: 8000
              hostPort: 8000
          env:
            - name: ARCH
              value: "amd64"
 
