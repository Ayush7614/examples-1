{
  "label": "pi3streamer for arm",
  "description": "Horizon deployment pattern that runs the pi3streamer workload",
  "public": true,
  "workloads": [
    {
      "workloadUrl": "https://internetofthings.ibmcloud.com/workloads/pi3streamer",
      "workloadOrgid": "$HZN_ORG_ID",
      "workloadArch": "arm",
      "workloadVersions": [
        {
          "version": "$PI3STREAMER_VERSION",
          "deployment_overrides": {
            "services": {
              "pi3streamer": {
                "environment": [
                  "WIOTP_DOMAIN=$WIOTP_DOMAIN",
                  "VERBOSE=1"
                ]
              }
            }
          },
          "deployment_overrides_signature": "",
          "priority": {},
          "upgradePolicy": {}
        }
      ],
      "nodeHealth": {
        "missing_heartbeat_interval": 600,
        "check_agreement_status": 120
      }
    }
  ],
  "agreementProtocols": [
    {
      "name": "Basic"
    },
    {
      "name": "Citizen Scientist"
    }
  ]
}
