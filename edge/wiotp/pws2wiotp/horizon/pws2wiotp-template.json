{
  "label": "PWS (Personal Weather Station) for $ARCH",
  "description": "Queries current weather statistics from the PWS microservice and sends them to WIoTP",
  "public": true,
  "workloadUrl": "https://internetofthings.ibmcloud.com/workloads/pws2wiotp",
  "version": "$PWS2WIOTP_VERSION",
  "arch": "$ARCH2",
  "downloadUrl": "not used yet",
  "apiSpec": [
    {
      "specRef": "https://internetofthings.ibmcloud.com/microservices/pwsms",
      "org": "$HZN_ORG_ID",
      "version": "[0.0.0,INFINITY)",
      "arch": "$ARCH2"
    },
    {
      "specRef": "https://internetofthings.ibmcloud.com/wiotp-edge/microservices/edge-core-iot-microservice",
      "org": "IBM",
      "version": "[1.0.11,INFINITY)",
      "arch": "$ARCH2"
    }
  ],
  "userInput": [
  ],
  "workloads": [
    {
      "deployment": {
        "services": {
           "pws2wiotp": {
              "image": "$DOCKER_HUB_ID/${ARCH2}_example_wl_pws2wiotp:$PWS2WIOTP_VERSION",
              "binds": [
                 "/var/wiotp-edge:/var/wiotp-edge"
              ],
              "environment": [
                 "WIOTP_DOMAIN=WIOTP_DOMAIN",
                 "WIOTP_EDGE_MQTT_IP=edge-connector",
                 "WIOTP_PEM_FILE=/var/wiotp-edge/persist/dc/ca/ca.pem"
              ]
           }
         }
      },
      "deployment_signature": "",
      "torrent": "{\"url\":\"\",\"signature\":\"\"}"
    }
  ]
}
